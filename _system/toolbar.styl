.search
	position relative
	middle()
	width 100%
	&__input
		width          100%
		border         1px solid blue
		border-radius  20px
		height         20px
		background     transparent
		color          white
		line-height    normal
		padding-left   5px
		font-size      11px
		middle()
		padding-right 22px
	&__submit
		position absolute
		width 13px !important
		height 13px
		appearance none
		background transparent
		border 0
		right 6px
		top 23px
		svg
			position absolute
			top 0
			right 0
			height 13px
			width 13px

.lang-trigger
	middle()
	color        #a4a4a4
	font-size    11px
	font-weight  bold
	user-select  none
	&__label
		t(color)
	&__carriage
		middle()
		top           -2px
		width          36px
		height         17px
		cursor         pointer
		margin         0 4px
		position       relative
		background     blue
		border-radius  10px
		&:after
			t(left)
			content        ""
			width          9px
			border-radius  12px
			left           4px
			top            4px
			height         9px
			box-shadow     0 1px 3px rgba(0,0,0,.3)
			background     white
			position       absolute
	&--lang
		&_russian
			.lang-trigger__label:first-of-type
				color white
			.lang-trigger__carriage:after
				left 4px
		&_english
			.lang-trigger__label:last-of-type
				color white
			.lang-trigger__carriage:after
				left 23px
				
