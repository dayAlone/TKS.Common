.toolbar
	full-width()
	z-index 20
	line-height 101px
	position fixed
	top 0
	left 0
	line-height 80px
	@media (min-width: scr_md)
		position relative
		line-height 101px
	&__nav
		full-width()
		line-height 57px
	&__tools
		line-height 49px
		@media (min-width: scr_md)
			line-height 37px
		a
			middle()
			text-transform uppercase
			font-size 10px
			color white
			font-weight bold
			svg
				middle()
				position relative
				top -1px
			&:hover
				color blue
			&[href="#Nav"]
				float right
				white-space nowrap
				span
					color           white
					font-size       10px
					text-transform  uppercase
					font-weight     bold
				svg
					middle()
					max-width    23px
					margin-left  7px
				&:hover
					color white
	a&__phone
		middle()
		color white
		font-size 15px
		font-weight bold
		white-space nowrap
		top 1px
		position relative
		svg
			middle()
			position relative
			top -2px
			margin-right 10px
			path
				fill blue
	.container
		z-index 3
		position relative
	.logo
		width 100%
		position relative
		z-index 10
		svg
			max-width calc(100% - 72px)
			display inline-block
			vertical-align: middle
			@media (max-width: scr_xs)
				max-width 80%
			@media (max-width: scr_md)
				max-height 50px
	.search
		&-form
			position     absolute
			z-index      30
			top          0px
			display      none
			right        9px
			line-height  35px
			height       32px
			background   toolbar_top
			&__button
				background   transparent
				border       0
				line-height  auto
				position     relative
				top          3px
				opacity      0
				svg
					path
						fill blue
			&__text
				background     transparent
				border         1px solid blue
				height         20px
				border-radius  20px
				line-height    24px
				min-width      230px
				padding        0 15px
				font-size      12px
				color white
		&-trigger
			display inline
			svg
				middle()
				top -2px
				position relative
				path
					fill blue
	.nav
		full-width()
		position   relative
		text-align justify
		z-index    40
		&__item
			font-weight bold
			text-transform uppercase
			color white
			line-height 53px
			height 53px
			@media (min-width: scr_sm)
				font-size 15px
				padding 3px 8.8px 0
			@media (min-width: scr_lg)
				font-size 16px
				padding 3px 16.4px 0
			margin-bottom 5px
			white-space nowrap
			&--active
				color blue
			&:first-of-type
				padding-left 0
			&:hover
				color blue
				text-decoration: none
	.shield
		position absolute
		top 0
		left 0
		width 100%
		height 80px
		min-width 220px
		max-width 300px
		@media (min-width: 375px)
			min-width 237px
		@media (min-width: scr_xs)
			min-width 100%
		@media (min-width: scr_md)
			height 101px
		&:before
			content ""
			background toolbar_top
			height 100%
			position absolute
			width 400%
			right 72px
			top 0
		&__right
			position absolute
			right 0
			@media (max-width: scr_md)
				top 38px
				svg
					max-height 35px
			svg
				path
					fill toolbar_top
					
			@media (min-width: scr_md)
				top 33px
	&:after, &:before
		position    absolute
		height      45px
		width       100%
		content     ""
		background  toolbar_top
		top         0
		left        0
		z-index     1
		@media (min-width: scr_md)
			height 33px
	&:before
		background toolbar_bottom
		height 91px
		display none
		@media (min-width: scr_md)
			display block

.site-select
	middle()
	width           100%
	font-weight     bold
	font-size       10px
	text-transform  uppercase
	position        relative
	z-index         300
	&--open
		a.site-select__trigger
			color white !important
			svg
				path
					fill white
	&__trigger
		color     white
		position  relative
		top       1px
		z-index   3
		white-space nowrap
		svg
			margin-left 5px
			path
				fill blue
		&:hover
			color white
		span
			display none
			@media (min-width: scr_md)
				display none
			@media (min-width: scr_lg)
				display inline
	&__dropdown
		display        none
		position       absolute
		top            3px
		left          -13px
		background     blue
		width          200px
		padding        30px 13px 5px
		border-radius  5px
	&__link
		float        left
		clear        both
		color        white
		line-height  20px
		text-decoration: underline
		t(color)
		&:hover
			color toolbar_top
			text-decoration none
